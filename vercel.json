{
  "version": 2,
  "buildCommand": "cd src && npm install && npm run build",
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "src/dist",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/src/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/src/dist/index.html"
    }
  ]
}
